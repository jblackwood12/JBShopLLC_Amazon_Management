@using WebApplication.ViewModels
@model ProductPageViewModel

@{
	ViewBag.Title = "Product Page";
}

<h1 style="text-align:center;">@Model.Product.Name</h1>

<div class="row">
	<div class="col-md-6 col-sm-6 col-lg-6">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa"></i>Image</h3>
			</div>
			
			<div class="panel-body">
				<a href="http://www.amazon.com/dp/@(Model.Product.ASIN)" target="_blank">
					<img src="@Model.ProductMetadata.ImageUrl" alt="Amazon product" style="max-width: 300px; max-height: 300px; display: block; margin-left: auto; margin-right: auto;">
				</a>
			</div>
		</div>
	</div>
	
	<div class="col-md-6 col-sm-6 col-lg-6">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa"></i>Details</h3>
			</div>
			
			<div class="panel-body">
				@{ Html.RenderPartial("_BasicInfo", Model); }
				@{ Html.RenderPartial("_CurrentProfitability", Model); }
			</div>
		</div>
	</div>
	
	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa"></i>Sales History</h3>
			</div>
			<div class="panel-body">
				<div class="flot-chart">
					<div class="flot-chart-content" id="ProductSalesGraphContainer" style="padding: 0; position: relative; height: 250px;">
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa"></i>Inventory History</h3>
			</div>
			<div class="panel-body">
				<div class="flot-chart">
					<div class="flot-chart-content" id="ProductQuantityGraphContainer" style="padding: 0; position: relative; height: 250px;">
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa"></i>Price History</h3>
			</div>
			<div class="panel-body">
				<div class="flot-chart">
					<div class="flot-chart-content" id="PriceHistoryGraphContainer" style="padding: 0; position: relative; height: 250px;">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="~/Scripts/data/Product/ProductReport.js"></script>
